{
  "manifest_version": 3,
  "name": "Article & Video Summarizer",
  "version": "1.0.0",
  "description": "Summarizes articles and YouTube videos using Claude AI",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["Readability.js"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "https://claude.ai/*",
    "https://www.youtube.com/*"
  ]
}